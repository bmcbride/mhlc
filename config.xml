<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
  <name>MHLC Maps</name>
  <description>
    Mohawk Hudson Land Conservancy trail mapping app.
  </description>
  <author email="mcbride.bryan@gmail.com" href="http://bryanmcbride.com">
    Bryan McBride
  </author>
  <content src="index.html"/>
  <plugin name="cordova-plugin-whitelist" spec="1"/>
  <access origin="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <allow-navigation href="*"/>
  <icon src="assets/img/android-chrome-192x192.png"/>
  <platform name="android">
    <allow-intent href="market:*"/>
    <splash src="assets/img/android-chrome-192x192.png" density="port-hdpi"/>
    <splash src="assets/img/android-chrome-192x192.png" density="port-ldpi"/>
    <splash src="assets/img/android-chrome-192x192.png" density="port-mdpi"/>
    <splash src="assets/img/android-chrome-192x192.png" density="port-xhdpi"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
  <config-file platform="android" parent="/manifest" mode="merge">
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
  </config-file>
  <engine name="android" spec="latest"/>
  <engine name="ios" spec="latest"/>
  <plugin name="cordova-plugin-geolocation"/>
  <plugin name="cordova-plugin-file"/>
  <plugin name="cordova-plugin-splashscreen"/>
</widget>
